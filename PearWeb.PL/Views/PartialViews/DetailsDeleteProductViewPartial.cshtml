@model PearWeb.PL.ViewModel.ProductsVM

<div class="form-group">
    <label class="col-form-label">Product Name</label>
    @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @readonly = "readonly" })
</div>
@Html.HiddenFor(model => model.ProductID)

<div class="form-group">
    <label class="col-form-label">Quantity Per Unit</label>
    @Html.TextBoxFor(m => m.QuantityPerUnit, new { @class = "form-control", @readonly = "readonly" })
</div>

<div class="form-group">
    <label class="col-form-label">Reorder Level</label>
    @Html.TextBoxFor(m => m.ReorderLevel, new { @class = "form-control", @readonly = (false ? "readonly" : "") })
</div>

<div class="form-group">
    <label class="col-form-label">Supplier ID</label>
    @Html.TextBoxFor(m => m.SupplierID, new { @class = "form-control", @readonly = "readonly" })
</div>

<div class="form-group">
    <label class="col-form-label">Unit Price</label>
    @Html.TextBoxFor(m => m.UnitPrice, new { @class = "form-control", @readonly = "readonly" })
</div>

<div class="form-group">
    <label class="col-form-label">Units In Stock</label>
    @Html.TextBoxFor(m => m.UnitsInStock, new { @class = "form-control", @readonly = "readonly" })
</div>

<div class="form-group">
    <label class="col-form-label">Units On Order</label>
    @Html.TextBoxFor(m => m.UnitsOnOrder, new { @class = "form-control", @readonly = "readonly" })
</div>

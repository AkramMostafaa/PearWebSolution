@model IEnumerable<Pear.DAL.Data.Products>
@{
    ViewData["Title"] = "Index";
}

<h1>All Products</h1>

<br />
<br />

<a href="/Product/Create" class="btn btn-primary">Add New Product</a>

<br />


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(P => P.ProductName)</th>
                <th>@Html.DisplayNameFor(P => P.QuantityPerUnit)</th>
                <th>@Html.DisplayNameFor(P => P.ReorderLevel)</th>
                <th>@Html.DisplayNameFor(P => P.UnitPrice)</th>
                <th>@Html.DisplayNameFor(P => P.UnitsInStock)</th>
                <th>@Html.DisplayNameFor(P => P.SupplierID)</th>
                <th>@Html.DisplayNameFor(P => P.UnitsOnOrder)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.QuantityPerUnit</td>
                    <td>@product.ReorderLevel</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.UnitsInStock</td>
                    <td>@product.SupplierID</td>
                    <td>@product.UnitsOnOrder</td>

                    @Html.Partial("_ButtonsPartial", product.ProductID.ToString())

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert-warning">
        <h3>There is No Products</h3>
    </div>
}